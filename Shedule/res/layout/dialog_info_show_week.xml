<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/all_screen_background_for_home" >

    <TextView
        android:id="@+id/infoTV1"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:maxLines="2"
        android:text="Русская литература"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoTV2"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_above="@+id/infoTime2"
        android:layout_alignLeft="@+id/infoTime1"
        android:layout_marginLeft="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:maxLines="2"
        android:text="Семенченко Виктор Павлович"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/settingImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back_for_dialog_button" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settingImage2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="closeClick"
        android:text="Ok"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingImage2"
        android:layout_alignParentRight="true"
        android:text="16:50"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingImage2"
        android:layout_alignParentLeft="true"
        android:text="17:43"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

</RelativeLayout>